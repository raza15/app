  <div class="container">
    <%= link_to "cloud manager", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Log In",   '/login' %></li>
        <li><%= link_to "Sign Up", '/signup' %></li>
