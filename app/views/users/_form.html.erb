<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<section class="jumbotron">
<section class='form-group'>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
